{% extends "base.html.jinja" %}
{% block title %}
Display Configuration
{% endblock title %}
{% block navbar %}
{% include "navbar.html.jinja" %}
{% endblock navbar %}
{% block content %}
<div class="container mt-4">
    <div class="row">
        <legend>Connected Displays</legend>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th># Connected</th>
                    <th>IP Address</th>
                    <th>Nickname</th>
                    <th>Configuration</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="displaysContainer">
            </tbody>
        </table>
    </div>
    <button type="button" class="btn btn-danger float-end" onclick="reloadAllDisplays()">Force Reload All Displays</button>
</div>
{% endblock content %}
{% block script %}
<script src="{{ url_for('static', path='js/utils/websocket_handler.js') }}"></script>
<script src="{{ url_for('static', path='js/setup_displays.js') }}"></script>
{% endblock script %}