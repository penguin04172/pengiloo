{% extends "base.html.jinja" %}
{% block title %}Scheduling{% endblock %}
{% block navbar %}{% include "navbar.html.jinja" %}{% endblock %}
{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-5">
            <div class="card bg-body-tertiary">
                <legend class="card-header">Schedule Parameters</legend>
                <div class="card-body">
                    <fieldset class="row mb-3">
                        <legend class="col-form-label col-lg-6 pt-0">Match Type</legend>
                        <div class="col-lg-6">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="matchType" id="typeRadios1" value="practice" onchange="refreshSchedules()" checked>
                                <label class="form-check-label" for="typeRadios1">Practice</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="matchType" id="typeRadios2" value="qualification" onchange="refreshSchedules()">
                                <label class="form-check-label" for="typeRadios2">Qualification</label>
                            </div>
                        </div>
                    </fieldset>
                    <div id="blockContainer"></div>
                    <p>
                        <b>Total match count: <span id="totalNumMatches">0</span></b><br />
                        <b>Matches per team: <span id="matchesPerTeam">0</span></b><br />
                        <b>Excess matches: <span id="numExcessMatches">0</span></b><br />
                        <b>Matches needed for +1 per team: <span id="nextLevelMatches">0</span></b>
                    </p>
                    <fieldset class="row mb-3">
                        <div class="col-lg-12">
                            <p>
                                <button type="button" class="btn btn-secondary" onclick="addBlock()">Add Block</button>
                                <button type="button" class="btn btn-primary" onclick="generateSchedule()">Generate Schedule/Save Blocks</button>
                            </p>
                            <p><button type="button" class="btn btn-danger" onclick="saveSchedule()">Save Schedule</button></p>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
        <div class="col-5">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Match</th>
                        <th>Time</th>
                    </tr>
                </thead>
                <tbody id="scheduleContainer">
                </tbody>
            </table>
        </div>
        <div class="col-2">
            <table class="table table-striped table-hover text-center">
                <thead>
                    <tr>
                        <th>Team</th>
                        <th>First Match</th>
                    </tr>
                </thead>
                <tbody id="firstMatchesContainer">
                </tbody>
        </div>
    </div>

    
</div>
{% endblock %}
{% block script %}
<script src="https://cdn.jsdelivr.net/npm/@eonasdan/tempus-dominus@6.9.4/dist/js/tempus-dominus.min.js" crossorigin="anonymous"></script>
<script src="{{ url_for('static', path='js/thirdparty/moment-with-locales.js') }}"></script>
<script src="{{ url_for('static', path='js/utils/datetime_picker.js') }}"></script>
<script src="{{ url_for('static', path='js/setup_schedule.js') }}"></script>
{% endblock script %}