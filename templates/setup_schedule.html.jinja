{% extends "base.html.jinja" %}
{% block title %}Scheduling{% endblock %}
{% block navbar %}{% include "navbar.html.jinja" %}{% endblock %}
{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-5">
            <div class="card bg-body-tertiary">
                <legend class="card-header">Schedule Parameters</legend>
                <div class="card-body">
                    <fieldset class="row mb-3">
                        <legend class="col-form-label col-lg-6 pt-0">Match Type</legend>
                        <div class="col-lg-6">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="matchType" id="typeRadios1" value="practice" checked>
                                <label class="form-check-label" for="typeRadios1">Practice</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="matchType" id="typeRadios2" value="qualification">
                                <label class="form-check-label" for="typeRadios2">Qualification</label>
                            </div>
                        </div>
                    </fieldset>
                    <div id="blockContainer"></div>
                    <p>
                        <b>Total match count: <span id="totalNumMatches">0</span></b><br />
                        <b>Matches per team: <span id="matchesPerTeam">0</span></b><br />
                        <b>Excess matches: <span id="numExcessMatches">0</span></b><br />
                        <b>Matches needed for +1 per team: <span id="nextLevelMatches">0</span></b>
                    </p>
                    <fieldset class="row mb-3">
                        <div class="col-lg-12">
                            <p>
                                <button type="button" class="btn btn-secondary">Add Block</button>
                                <button type="button" class="btn btn-primary">Generate Schedule/Save Blocks</button>
                            </p>
                            <p><button type="button" class="btn btn-danger">Save Schedule</button></p>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
        <div class="col-5">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Match</th>
                        <th>Time</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
        <div class="col-2">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Team</th>
                        <th>First Match</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
        </div>
    </div>

    <div id="blockTemplate" style="display: none;">
        <div class="card bg-body-tertiary mb-3">
            <div class="row card-header">
                <h1>Block 0</h1>
                <button type="button" class="btn-close"></button>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <label for="startTime" class="col-lg-6 col-form-label">Start Time</label>
                    <div class="input-group col-lg-6" id="startTimePicker" data-td-target-input="nearest" data-td-target-toggle="nearest">
                        <input type="text" class="form-control" id="startTime" data-td-target="#startTimePicker">
                        <span class="input-group-text" data-td-toggle="datetimepicker">
                            <i class="bi bi-calendar"></i>
                        </span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="endTime" class="col-lg-6 col-form-label">End Time</label>
                    <div class="input-group col-lg-6" id="endTimePicker" data-td-target-input="nearest" data-td-target-toggle="nearest">
                        <input type="text" class="form-control" id="endTime" data-td-target="#endTimePicker">
                        <span class="input-group-text" data-td-toggle="datetimepicker">
                            <i class="bi bi-calendar"></i>
                        </span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="matchSpacingMinSec" class="col-lg-6 col-form-label">Cycle Time</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" name="name" id="matchSpacingMinSec" placeholder="6:00">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-4">Match Count: <span id="numMatches"></span></div>
                    <div class="col-8">Actual end time: <span id="actualEndTime"></span></div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}